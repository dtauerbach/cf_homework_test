<hr>
Contributions<br>
<% if contributions.blank? %>
No Contributions
<% else %>
  <table border="1px black">
    <tr>
      <td>ID</td>
      <td>Amount</td>
      <td>Campaign</td>
    </tr>
  <% contributions.each do |contribution| %>
    <tr>
      <td><%= contribution.id %></td>
      <td><%= contribution.amount %></td>
      <td><%= contribution.campaign.title %></td>
    </tr>
  <% end %>
  </table>
<% end %>
